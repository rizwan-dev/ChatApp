<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">

    <ImageView
        android:layout_alignBottom="@+id/contentMessageChat"
        android:layout_width="@dimen/image_size_user"
        android:layout_height="@dimen/image_size_user"
        android:id="@+id/ivUserChat" />



    <TextView
        android:layout_toLeftOf="@+id/txtTime"
        tools:text="Chaitali"
        android:id="@+id/txtName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:paddingLeft="10dp"
        android:paddingTop="6dp"
        android:textSize="15sp"
        android:layout_toRightOf="@+id/ivUserChat" />

    <TextView
        android:layout_below="@+id/txtName"
        android:text=""
        android:id="@+id/txtConversation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:paddingLeft="10dp"
        android:paddingTop="6dp"
        android:textSize="15sp"
        android:layout_toRightOf="@+id/ivUserChat" />

    <TextView
        android:text=""
        android:id="@+id/txtTime"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>